#!/bin/sh

# =====================
# volume & sound status
# =====================

ismuted=$(pamixer --get-mute)

if [ ! -z "$ismuted" ] && [ "$ismuted" = "true" ]; then
  echo "ðŸ”‡"
  exit 0
fi

volume=$(pamixer --get-volume)
if [ ! -z "$volume" ]; then
  if [[ $volume -ge 70 ]]; then
    echo "ðŸ”Š$volume"
  elif [[ $volume -ge 30 ]]; then
    echo "ðŸ”‰$volume"
  else
    echo "ðŸ”ˆ$volume"
  fi
fi
