#!/bin/sh

# ==========================
# Network Connection Status
# ==========================

netstatus=$(ip link | grep -i "state UP")
if [ -z "$netstatus" ]; then
  netstatus="ğŸŒ"
else
  netstatus="ğŸ“¡"
  if [ -f /proc/net/wireless ]; then
    signal_strength=$(cat /proc/net/wireless | grep wlan0 | tr -s [:space:] | cut -d ' ' -f 4 | sed 's/\.//')
    if [ ! -z "$signal_strength" ]; then
      netstatus=${netstatus}${signal_strength}%
    fi
  fi
fi

echo "$netstatus"
